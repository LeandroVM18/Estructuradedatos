#include <iostream>
#include <math.h>

using namespace std;

int fact(int m,int n){
    if(n==0){
        return 1;
    }else{
        return pow(m,n-1)*m;
    }
}

int main(){
    int n,m;
    cout<<"Ingrese la base y el exponente"<<endl;
    cin>>m>>n;
    cout<<"El resultado es: "<<endl;
    cout<<fact(m,n);
    return 0;
}
