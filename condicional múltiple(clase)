#include <iostream>

using namespace std;

int main()
{
    int opcion;
   cout<<"Ingrese una opcion de las siguientes:  "<<endl;
   cout<<"1.chocolate caliente"<<endl;
   cout<<"2.te "<<endl;
   cout<<"3.tody "<<endl;
   cout<<"4.cafe  "<<endl;
   cin>>opcion;
    cout<<"Usted selecciono:  "<<endl;
    switch(opcion){
        case 1: cout<<"chocolate caliente"<<endl;
        break;
        case 2: cout<<"te "<<endl;
        break;
        case 3: cout<<"tody "<<endl;
        break;
        case 4: cout<<"cafe  "<<endl;
        break;
        default: cout<<"Opcion invalida "<<endl;
        break;
    }
   
   return 0;
}
